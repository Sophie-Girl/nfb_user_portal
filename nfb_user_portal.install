    {

        \Drupal::logger('nfb_user_portal')->notice("Dropping Table");
        $database->schema()->dropTable('nfb_user_portal_content');
    }
    $schema['nfb_user_portal_content'] = array(
        'description' => 'Stores all markup content for the NFB User Portal',
        'fields' => array(
            'pid' => array(
                'type' => 'serial',
